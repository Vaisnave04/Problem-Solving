/*Using Brute- Force Approach */
#include<stdio.h>
int main(){
    int num=-4;
    if(num>=0){
        printf("The number is positive");
    }
    else if(num<0){
        printf("The number is negative");
    }
    else{
        printf("The number is zero");
    }
}
/*Using Nested If*/
#include<stdio.h>
int main(){
    int num=-4;
    if(num>=0){
        if(num==0){
            printf("The number is zero");
        }
        else{
            printf("The number is positive");
        }
    
    }
    else{
        printf("The number is negative");
    }
}

/*Using Ternary Operator */
#include<stdio.h>
int main(){
    int num=4;
    if(num==0){
        printf("The number is zero");
        
    }
    else{
        (num>0)?printf("The number is positive"):printf("The number is negative");
    }
}
